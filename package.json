{
  "name": "@adze/transport-file",
  "description": "AdzeJS middleware to write logs to rotating log files.",
  "version": "2.0.0",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.prod.json && tsc-alias && rm ./dist/demo_funcs.js && rm ./dist/demo_funcs.d.ts",
    "build:demo": "tsc --project tsconfig.json && tsc-alias",
    "clean": "rm -rf ./dist",
    "predemo:browser": "npm run build:demo",
    "demo:browser": "http-server -o -p 8082",
    "predemo:node": "npm run build:demo",
    "demo:node": "ts-node --project tsconfig.json --experimental-specifier-resolution=node --esm src/demo_funcs.ts",
    "lint": "prettier ./src --check && eslint .",
    "lint:fix": "prettier ./src --write && eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui --disable-console-intercept",
    "prepare": "husky",
    "size": "size-limit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adzejs/transport-file.git"
  },
  "keywords": [
    "typescript",
    "logging",
    "javascript",
    "node",
    "browser",
    "file",
    "middleware"
  ],
  "author": "Andrew Stacy <ajstacy@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adzejs/transport-file/issues"
  },
  "homepage": "https://github.com/adzejs/transport-file#readme",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jsdom": "^21.1.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2",
    "size-limit": "^11.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1",
    "vitest": "^2.0.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "file-stream-rotator": "^1.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
